{{!-- <h1>Eat Da Burger!</h1> --}}
<div class="container">
<div class="wrapper clearfix">
<div id = "readyToEat">
<h2>Burgers To Be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="btnDevour" type="submit" data-id="{{id}}">Devour It!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id = "devouredBurgers">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
          <li>
        {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div id = "newBurger">
  <h2>Add a Burger</h2>
  <form class="create-form">
    
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button class="submit" type="submit">Create The Burger!</button>
  </form>
</div>
</div>
