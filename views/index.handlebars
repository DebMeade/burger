{{!-- <h1>Eat Da Burger!</h1> --}}
<div class="container">
<div class="wrapper col-md-12 clearfix">
<div id = "readyToEat" class="col-md-6">
<h2>Burgers To Be Devoured</h2>

<ul class="col-md-8">
  {{#each burgers}}
    {{#unless devoured}}
      <ul>
        {{burger_name}}
        {{!-- <button type="button" class="btn btn-light">Light</button> --}}
        <button class="btnDevour col-md-4 btn btn-light btn-sm" type="button" data-id="{{id}}">Eat!</button>
        <hr>
      </ul>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id = "devouredBurgers" class="col-md-6">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
          <ul>
        {{burger_name}}
        <hr>
      </ul>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div id = "newBurger">
  <h2>Add a Burger</h2>
  <form class="create-form">
    
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button class="submit" type="submit">Create The Burger!</button>
  </form>
</div>
</div>